@model IEnumerable<Demo.Models.Broading>
@{
    ViewData["Title"] = "Home Page";
}

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FK_MovieId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FK_TheaterId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FK_MovieId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FK_TheaterId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
